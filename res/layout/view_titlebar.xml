<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/view_titlebar_imgViBack"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/sleeptime_back" />

        <TextView
            android:id="@+id/view_titlebar_txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_color_top_title"
            android:textSize="@dimen/text_size_top_title" />

        <TextView
            android:id="@+id/view_titlebar_txtRightTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dip"
            android:textColor="@color/text_color_top_title"
            android:textSize="@dimen/text_size_top_title"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>